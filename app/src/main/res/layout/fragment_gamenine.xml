<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g9_bg">

    <ImageView
        app:layout_widthPercent="28%"
        android:layout_height="0dp"
        app:srcCompat="@drawable/g9_t1_l1_1i"
        android:layout_alignLeft="@+id/img_question_bg"
        android:layout_alignTop="@+id/img_question_bg"
        app:layout_marginTopPercent="9%"
        app:layout_marginLeftPercent="5%"
        android:id="@+id/img_question_left"
        />

    <ImageView
        app:layout_widthPercent="28%"
        android:layout_height="0dp"
        app:srcCompat="@drawable/g9_t1_l1_1t"
        android:layout_alignRight="@+id/img_question_bg"
        android:layout_alignTop="@+id/img_question_bg"
        app:layout_marginTopPercent="9%"
        app:layout_marginRightPercent="5%"
        android:id="@+id/img_question_right"
        />

    <ImageView
        app:layout_widthPercent="70%"
        android:layout_height="0dp"
        app:srcCompat="@drawable/g9_board_1"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="25%"
        android:id="@+id/img_question_bg" />

    <ImageView
        app:layout_widthPercent="30%"
        android:layout_height="0dp"
        app:srcCompat="@drawable/g9_angel_t1"
        app:layout_marginLeftPercent="2%"
        android:id="@+id/img_angle" />

    <Button
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x72"
        android:id="@+id/btn_score"
        app:layout_marginTopPercent="5%"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="@dimen/x30"
        android:paddingLeft="20dp"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:background="@drawable/score"
        />


    <LinearLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:id="@+id/panelButtons"
        android:weightSum="4"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/g9_rec"
            android:id="@+id/btn_record"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:contentDescription="錄音"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/g9_play"
            android:scaleType="fitCenter"
            android:id="@+id/btn_play"
            android:contentDescription="播放"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/g9_ans"
            android:id="@+id/btn_ans"
            android:scaleType="fitCenter"
            android:contentDescription="答案"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/g9_next"
            android:id="@+id/btn_next"
            android:scaleType="fitCenter"
            android:contentDescription="下一題"
            android:layout_weight="1"/>



    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="8%"
        android:id="@+id/btn_countDown"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:paddingLeft="10dp"
        android:layout_above="@+id/panelButtons"
        android:text="15"
        android:visibility="invisible"
        android:background="@drawable/g9_count"
        />


</android.support.percent.PercentRelativeLayout>