<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sahk.earlyliteracy.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relativeLayoutToolbar"
        android:layout_width="match_parent"
        app:layout_heightPercent="20%">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButtonBack"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_back"
                android:contentDescription="返回"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButtonHome"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_home"
                android:contentDescription="主頁"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButtonSkip"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_skip"
                android:contentDescription="略過"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imageButtonBgMusic"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_bg_music_off"
                android:contentDescription="背景音樂"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButtonAward"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_award"
                android:contentDescription="獎勵"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButtonSound"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_sound_on"
                android:contentDescription="音效"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButtonSettings"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_settings"
                android:contentDescription="設定"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/imageButtonReadme"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginStart="@dimen/x3"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/button_readme"
                android:visibility="gone"
                android:contentDescription="說明"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>
